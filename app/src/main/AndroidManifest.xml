<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="cz.helu.rtl">

	<application
		android:name=".RTLApplication"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<activity
			android:name=".activity.MainActivity"
			android:label="@string/ab_title_main"
			android:launchMode="singleTask"
			android:uiOptions="none"
			android:windowSoftInputMode="adjustPan">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<activity
			android:name=".activity.PercentActivity"
			android:label="@string/ab_title_percent"
			android:launchMode="standard"
			android:uiOptions="none">
		</activity>
		<activity
			android:name=".activity.RTLActivity"
			android:label="@string/ab_title_rtl"
			android:launchMode="standard"
			android:uiOptions="none">
		</activity>
	</application>

</manifest>
